---
// src/components/Nav.astro
const links = [
  { href: '/', label: 'Home' },
  { href: '/recipes', label: 'Receitas' },
  { href: '/print', label: 'Imprimir' },
];
---
<nav style="
  position:sticky; top:0; z-index:10; backdrop-filter:saturate(180%) blur(10px);
  background:rgba(255,255,255,.86); border-bottom:1px solid #e5e7eb;">
  <div style="max-width:960px;margin:0 auto;padding:.75rem 1rem;display:flex;gap:1rem;align-items:center;justify-content:space-between;">
    <a href="/" style="text-decoration:none;color:#2E8B57;font-weight:700">BabyRecipes</a>
    <div style="display:flex;gap:.75rem;flex-wrap:wrap;">
      {links.map(l => <a href={l.href} style="text-decoration:none;color:#374151">{l.label}</a>)}
    </div>
  </div>
</nav>