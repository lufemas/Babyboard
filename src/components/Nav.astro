---
// src/components/Nav.astro
const { base } = Astro.props;
const links = [
  { href: `${base}`, label: 'Início' },
  { href: `${base}recipes`, label: 'Receitas' },
  { href: `${base}print`, label: 'Imprimir' },
];
---
<nav class="sticky top-0 z-10 bg-white/90 backdrop-blur border-b border-slate-200">
  <div class="mx-auto max-w-5xl px-4 py-3 flex items-center justify-between">
    <a href={base} class="font-bold text-emerald-700">Receitas De Bebê</a>
    <div class="flex gap-4 text-slate-700">
      {links.map(l => <a href={l.href} class="hover:text-emerald-700">{l.label}</a>)}
    </div>
  </div>
</nav>
